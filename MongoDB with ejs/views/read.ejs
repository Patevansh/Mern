<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="text-white w-screen h-screen bg-zinc-900 screen">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back to Home</a>
      <h1 class="text-3xl tracking-tighter px-5 py-2">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length==0){%>
            <h1 class="text-xl text-zinc-500 tracking-tighter px-5 py-2">No Users Found</h1>
        <% } %>
        <% users.forEach(function(user){%>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 rounded-md bg-gray-400">
                    <img
                        src="<%= user.image %>"
                        alt="<%= user.name %>"
                        class="w-full h-full object-cover rounded-md object-cover object-top"
                    />
                </div>
                <h3 class="text-xl mt-3 tracking-tighter">
                    <%= user.name %>
                </h3>
                <h5 class="text-zinc-500">
                    <%= user.email %>
                </h5>
                <div class="flex justify-between mt-3">
                  <a
                    class="px-5 py-2 border-2 rounded-md outline-none border-zinc-800 bg-blue-500"
                    href="/edit/<%= user._id %>"
                  >
                    Edit
                  </a>
                  <a
                    class="px-5 py-2 border-2 rounded-md outline-none border-zinc-800 bg-red-500" 
                    href="/delete/<%= user._id %>"
                  >
                    Delete
                  </a>
                </div>
              </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
